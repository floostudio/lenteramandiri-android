<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/tooolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <EditText
            android:id="@+id/edt_change_currentpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textColorHint="@color/hint"
            android:background="@drawable/bg_txtfield_register"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:hint="Kata Sandi Saat ini"/>
        <EditText
            android:id="@+id/edt_change_newpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textColorHint="@color/hint"
            android:background="@drawable/bg_txtfield_register"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:hint="Kata Sandi Baru"/>
        <EditText
            android:id="@+id/edt_change_reenterpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textColorHint="@color/hint"
            android:background="@drawable/bg_txtfield_register"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:hint="Masukkan Kembali Kata Sandi"/>
    </LinearLayout>

</LinearLayout>