<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center">

    <RelativeLayout
        android:id="@+id/dialog_social_layout"
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:background="#f4f5f5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:padding="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <floo.com.mpm_mandiri.utils.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Report"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    app:typeface="robotoLight" />




            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="right" >

            <floo.com.mpm_mandiri.utils.RobotoTextView
                android:id="@+id/dialog_media_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:background="@drawable/selector_dialog_media"
                android:gravity="center"
                android:minWidth="64dp"
                android:padding="8dp"
                android:text="CANCEL"
                android:textColor="@color/background"
                android:textSize="14sp"
                app:typeface="robotoMedium" />

            <floo.com.mpm_mandiri.utils.RobotoTextView
                android:id="@+id/dialog_media_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/selector_dialog_media"
                android:gravity="center"
                android:minWidth="64dp"
                android:padding="8dp"
                android:text="OK"
                android:textColor="@color/background"
                android:textSize="14sp"
                app:typeface="robotoMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:orientation="vertical" >

                <EditText
                    android:id="@+id/dialog_media_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_border"
                    android:cursorVisible="true"
                    android:gravity="top|left"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:padding="16dp"
                    android:singleLine="false"
                    android:textColor="@color/Black"
                    android:textColorHint="@android:color/white"
                    android:textSize="12sp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>