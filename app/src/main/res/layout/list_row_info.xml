<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/activity_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
        <TableRow>

        <TextView
            android:id="@+id/txt_title_info"
            android:layout_column="1"
            android:textColor="@color/background"
            android:textSize="12dp"
            android:text="Gold dips, but holds above"/>
            <TextView
                android:id="@+id/txt_id_info"
                android:textColor="@android:color/transparent"
                android:gravity="right"/>
        </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:id="@+id/txt_date_info"

                        android:textSize="10dp"
                        android:textColor="@color/lightgrey"
                        android:text="22/08/2016"
                        android:layout_column="1"/>

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_forward"
                        android:gravity="right"
                        android:visibility="gone"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_url_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_content_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/lightgrey"
                android:text="dksjbvksbvbvdkfvbkfbv"
                android:visibility="gone"/>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>