<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="7dp"
    android:paddingTop="7dp"
    android:paddingRight="7dp"
    android:paddingBottom="7dp">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
    <TableRow>

<LinearLayout
    android:layout_column="1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_porto_account_acc"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="OTS ke Pabrik"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:id="@+id/txt_porto_account_limit"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/transparent"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/txt_porto_account_tunggakan"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/transparent"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/txt_porto_account_kolektibilitas"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/transparent"
                    android:gravity="right"
                    />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_porto_account_company"
                    android:text="Change Password"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@color/background"/>
        <TextView
            android:id="@+id/txt_porto_account_tempo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textColor="@android:color/transparent"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/txt_porto_account_debet"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textColor="@android:color/transparent"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/txt_porto_account_kredit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textColor="@android:color/transparent"
            android:gravity="right"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_porto_account_valuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR "
            android:textColor="@color/yellow"
            android:layout_gravity="end"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:id="@+id/txt_porto_account_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTS ke Pabrik"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:textColor="@color/yellow"
            android:textAlignment="textEnd"/>
        <TextView
            android:id="@+id/txt_porto_account_rata"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textColor="@android:color/transparent"
            android:gravity="right"
            />
        <TextView
            android:id="@+id/txt_porto_account_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:textColor="@android:color/transparent"
            android:gravity="right"
            />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_forward"
        android:layout_gravity="right"/></LinearLayout>
    </TableRow>
    </TableLayout>


</LinearLayout>