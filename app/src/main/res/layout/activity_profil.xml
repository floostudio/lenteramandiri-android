<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:background="@color/yellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Detail"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="normal"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_profile_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_profil"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"/>

            <TextView
                android:id="@+id/txt_profil_fullname"
                android:layout_marginTop="5dp"
                android:textColor="@color/background"
                android:textSize="@dimen/activity_horizontal_margin"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separator_in_profile"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"/>

            <TextView
                android:id="@+id/txt_profil_title"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.5dp"
                android:textColor="@color/yellow"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/separator_in_profile"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

        <TableRow>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="NIP"
                android:textColor="@color/background"
                android:padding="3dip"/>
            <TextView
                android:id="@+id/txt_profil_nip"
                android:layout_marginRight="10dp"

                android:layout_column="1"
                android:gravity="right"
                android:padding="3dip"/>
        </TableRow>
        </TableLayout>
        </LinearLayout>

    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Email"
                    android:textColor="@color/background"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_profil_email"
                    android:layout_marginRight="10dp"

                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Directorat"
                    android:textColor="@color/background"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_profil_directorat"
                    android:layout_marginRight="10dp"

                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Group"
                    android:textColor="@color/background"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_profil_group"
                    android:layout_marginRight="10dp"

                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Department"
                    android:textColor="@color/background"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_profil_department"
                    android:layout_marginRight="10dp"

                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linier_changepassword"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txt_profil_changepassword"
                    android:text="Change Password"
                    android:layout_column="1"
                    android:textColor="@color/background"/>

                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_forward"
                    android:gravity="right" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp"
        android:visibility="invisible">

    <Button
        android:id="@+id/btn_updateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE PROFILES"
        android:visibility="invisible" />

        </LinearLayout>

</LinearLayout>