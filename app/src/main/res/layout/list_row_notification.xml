<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#b237474f" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp" >

            <com.floo.lenteramandiri.utils.RobotoTextView
                android:id="@+id/list_item_sticky_header_media_album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="AlbumName (2006)"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:typeface="robotoMedium" />

            <com.floo.lenteramandiri.utils.RobotoTextView
                android:id="@+id/list_item_sticky_header_media_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ArtistName"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:typeface="robotoLight" />

            <com.floo.lenteramandiri.utils.RobotoTextView
                android:id="@+id/list_row_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ArtistName"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:typeface="robotoLight" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0"
        android:background="@android:color/transparent" />

</LinearLayout>