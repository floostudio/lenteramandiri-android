<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tooolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/txt_account_detail_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textSize="@dimen/activity_horizontal_margin"
            android:text="PT. MASPINA"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_list_datainprofile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Account Number"
                    android:textColor="@color/Black"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_account_detail_acc"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/Black"
                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Valuta"
                    android:textColor="@color/Black"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_account_detail_valuta"
                    android:layout_marginRight="10dp"
                    android:text="IDR"
                    android:layout_column="1"
                    android:textColor="@color/Black"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_list_datainprofile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Saldo"
                    android:textColor="@color/Black"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_account_detail_saldo"
                    android:layout_marginRight="10dp"
                    android:text="3.000.000.000.000"
                    android:textColor="@color/Black"
                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Limit"
                    android:textColor="@color/Black"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_account_detail_limit"
                    android:layout_marginRight="10dp"
                    android:text="3.000.000.000.000"
                    android:textColor="@color/Black"
                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_list_datainprofile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Tunggakan"
                    android:textColor="@color/Black"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_account_detail_tunggakan"
                    android:layout_marginRight="10dp"
                    android:text="30.000.000.000"
                    android:textColor="@color/Black"
                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Kolektibiltas"
                    android:padding="3dip"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_account_detail_kolektibilas"
                    android:layout_marginRight="10dp"
                    android:text="2A"
                    android:textColor="@color/Black"
                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_list_datainprofile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Jumlah Tempo"
                    android:textColor="@color/Black"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_account_detail_jmlhTempo"
                    android:layout_marginRight="10dp"
                    android:text="30/12/2016"
                    android:textColor="@color/Black"
                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="1">
            <TableRow>
