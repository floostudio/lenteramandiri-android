            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_list_datainprofile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="T. Trans Kredit"
                    android:textColor="@color/Black"
                    android:padding="3dip"/>
                <TextView
                    android:id="@+id/txt_account_detail_kredit"
                    android:layout_marginRight="10dp"
                    android:text="100.000.000.000"
                    android:textColor="@color/Black"
                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="15dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="Saldo Rata-rata"
                    android:padding="3dip"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_account_detail_rata_rata"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/Black"
                    android:text="100.000.000.000"
                    android:layout_column="1"
                    android:gravity="right"
                    android:padding="3dip"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

        <Button
            android:id="@+id/btn_account_detail_convnant"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COVENANT"
            android:textColor="@color/White"
            android:background="@color/yellow"/>

</LinearLayout>